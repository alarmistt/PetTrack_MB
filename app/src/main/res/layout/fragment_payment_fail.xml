<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEBEE"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp">


    <!-- Tiêu đề -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_failed"/>

    <TextView
        android:id="@+id/tvFail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thanh toán thất bại!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#C62828"
        android:layout_marginBottom="8dp" />

    <!-- Mô tả lỗi -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đã có lỗi xảy ra trong quá trình thanh toán. Vui lòng thử lại sau."
        android:textSize="16sp"
        android:textColor="#6D4C41"
        android:layout_marginBottom="32dp"
        android:textAlignment="center" />

    <!-- Nút quay về -->
    <Button
        android:id="@+id/btnBackToWalletFail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quay về trang chủ"
        android:textAllCaps="false"
        android:backgroundTint="#C62828"
        android:textColor="#FFFFFF"
        android:padding="14dp"
        android:textSize="16sp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="12dp" />

</LinearLayout>
